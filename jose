-- #100DaysOfCode. Day 18
SELECT * FROM purchases;
SELECT * FROM customers;
SELECT * FROM items 
INNER JOIN purchases ON items.id = purchases.items_id;

SELECT * FROM customers 
INNER JOIN purchases ON customers.id = purchases.customer_id;